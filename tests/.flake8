[flake8]
max-complexity = 10
max-line-length = 120
ignore = F841, W503
# F841 = Variable assigned but not used. In tests, it's useful to keep those for debugging.
# W503 = Line break before binary operator â€“ we have to choose between W503 and W504 as they're incompatible. W504 is
# compliant with the more recent PEP8.
exclude = antlr_entity/*, antlr_script/*, simple_lang/*
